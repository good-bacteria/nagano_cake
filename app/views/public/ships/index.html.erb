<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
    <h2>配送先登録一覧</h2>
     <%= render 'layouts/errors', obj:@shipnew %>

    <%= form_with model: @shipnew, local:true do |f| %>
      <div class="form-group row">
        <%= f.label :郵便番号, class: "col-sm-4" %>
        <%= f.text_field :postal_code, class: "form-control col-sm-4" %>
      </div>

      <div class="form-group row">
        <%= f.label :住所, class: "col-sm-4" %>
        <%= f.text_field :address, class: "form-control col-sm-4" %>
      </div>

      <div class="form-group row">
        <%= f.label :宛名, class: "col-sm-4" %>
        <%= f.text_field :name, class: "form-control col-sm-4" %>
      </div>

      <div class="actions">
        <%= f.submit "編集内容を保存", class: "btn btn-m btn-success" %>
      </div>
    <% end %>
    </div>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @ships.each do |ship| %>
      <tr>
        <td><%= ship.postal_code %></td>
        <td><%= ship.address %></td>
        <td><%= ship.name %></td>
        <td>
          <%= link_to '編集する',edit_ship_path(ship), class: "btn btn-sm btn-success" %>
          <%= link_to '削除する',ship_path(ship) , method: :delete,data: {confirm: '本当に消しますか？'}, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  </div>
</div>