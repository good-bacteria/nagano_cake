<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
    <h2>配送先編集</h2>
    <%= render 'layouts/errors', obj:@ship %>
    
    <%= form_with model: @ship, local:true do |f| %>
      <div class="form-group row">
        <%= f.label :郵便番号, class: "col-sm-4" %>
        <%= f.text_field :postal_code, class: "form-control col-sm-4" %>
      </div>
      
      <div class="form-group row">
        <%= f.label :住所, class: "col-sm-4" %>
        <%= f.text_field :address, class: "form-control col-sm-4" %>
      </div>
      
      <div class="form-group row">
        <%= f.label :宛名, class: "col-sm-4" %>
        <%= f.text_field :name, class: "form-control col-sm-4" %>
      </div>
      
      <div class="actions">
        <%= f.submit "編集内容を保存", class: "btn btn-m btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>