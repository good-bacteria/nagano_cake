<div class="container">
  <div class="row">
    <div class='col-md-8 offset-md-2'>
      <h3>ログイン</h3><br/>
      <h5 class="ml-4">会員の方はこちらからログイン</h5>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row ml-4 mt-4">
          <%= f.label :メールアドレス, class: "col-sm-3" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-6" %>
        </div>
        <div class="form-group row ml-4 ">
          <%= f.label :パスワード, class: "col-sm-3" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-sm-6" %>
        </div>
        <% if devise_mapping.rememberable? %>
        <div class="field ml-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        </div>
        <% end %>
        <div class="actions row ml-4">
           <div class="col-sm-3"></div><br />
           <%= f.submit "ログイン", class:"btn btn-primary px-4" %>
        </div>
        <% end %>

        <h5 class="mt-5 ml-4">会員登録がお済みでない方</h5>
        <h6 class="text-center mr-3"><%= link_to "こちら", new_customer_registration_path %>　から新規登録を行ってください。</h6>
    </div>
  </div>
</div>



