<style>
.cake {
  animation: fall 8s linear;
  display: inline-block;
  height: 1em;
  line-height: 1em;
  position: fixed;
  top: -1em;
  z-index: 1000;
}

@keyframes fall {
  0% {
    transform:translateY(0) rotateY(0);
  }
  100% {
    transform:translateY(calc(100vh + 1em)) rotateY(3600deg);
  }
}
</style>

<script>
//星を作る関数。n は星の個数。多いほど星が多く振ります。
function cakeMaker(n) {
    var cake = document.createElement("div");
    cake.className = "cake";
    cake.textContent = "🍰";
    for(var i = 0; i < n; i++) {
        cakeSet(cake);
    }
}

//星のセッティングをする関数。
function cakeSet(clone) {
    var cakeClone = clone.cloneNode(true);
    var cakeStyle = cakeClone.style;

    //星の位置（left）、アニメーションの遅延時間（animation-delay）、サイズ（font-size）をランダムで指定
    cakeStyle.left = 100 * Math.random() + "%";
    cakeStyle.animationDelay = 8 * Math.random() + "s";
    cakeStyle.fontSize = ~~(50 * Math.random() + 20) + "px";
    document.body.appendChild(cakeClone);

    //星一つのアニメーションが終わったら新しい星を生成
    cakeClone.addEventListener("animationend", function() {
        this.parentNode.removeChild(this);
        var cake = document.createElement("div");
        cake.className = "cake";
        cake.textContent = "🍰";
        cakeSet(cake);
    }, false)
}

//使用例。ケーキを100個ふらせます。
cakeMaker(100)
</script>
