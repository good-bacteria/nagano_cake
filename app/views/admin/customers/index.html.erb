<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h2>会員一覧</h2>

     <table class='table'>
        <thead class="bg-light">
          <tr>
            <th>会員ID</th>
            <th><u>氏名</u></th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody class="border-bottom">
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><u><%= link_to customer.full_name ,admin_customer_path(customer)%></u></td>
              <td><%= customer.email %></td>

              <% if customer.is_deleted == false %>
              <td class="text-success font-weight-bold">有効</td>
              <% else %>
              <td class="text-secondary">無効</td>
              <% end %>

            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>