<h2>商品詳細</h2>
<div>
  <%= image_tag @item.get_image, size:"200x150" %>
</div>
<table>
  <tr>
    <th>商品名</th>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <th>商品説明</th>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <th>ジャンル</th>
    <td><%= @item.genre.name %></td>
  </tr>
  <tr>
    <th>税込価格<br>(税抜価格)</th>
    <td><%= @item.price_add_tax.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
  </tr>
</table>

<%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
