<div class="container">
  <div class="row">
    <div class="mx-auto">
      <div class="mb-3 p-2 bd-highlight">
        <h2 class="mb-4">ジャンル一覧・追加</h2>
        <%= render 'layouts/errors', obj: @genre %>
        <%= form_with model: @genre, url: admin_genres_path, class: "row" do |f| %>
          <div class="col-auto">
            <h4><%= f.label :name, "ジャンル名" %></h4>
          </div>
          <div class="col-auto">
            <%= f.text_field :name, class: "form-control", size: "20" %>
          </div>
          <div class="col-auto">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
      <table class="table table-hover table-inverse table-sm shadow-lg">
        <thead>
          <tr>
            <th colspan="2">ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="align-middle">
                <%= genre.name %>
              </td>
              <td class="text-center">
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="mx-auto" style="width: 200px;">
        <%= paginate @genres, theme: 'twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
</div>
