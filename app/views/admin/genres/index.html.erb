<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name %>
  <%= f.submit "新規登録", class: "btn btn-success" %>
<% end %>

<!-- エラー表示 -->
<% if @genre.errors.any? %>
  <h3><%= pluralize(@genre.errors.count, "error") %> prohibited this obj from being saved:</h3>
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container-fluid">
  <div class="row justify-content-start">
    <table class="table table-bordered w-50 m-1">
      <thead>
        <tr>
          <th colspan="2" class="bg-secondary">ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
