<header class="sticky-top bg-white shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand" href="/"><%= image_tag('logo.png') %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <% if customer_signed_in? %>
        <div class="collapse navbar-collapse justify-content-end mx-3" id="navbarNavDropdown">ようこそ、<%= current_customer.last_name %>さん！</div>
      <% end %>
      <div class="collapse navbar-collapse flex-column" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if customer_signed_in? %>
            <li>
              <%= link_to "マイページ", customers_my_page_path, class: "btn btn-outline-secondary mx-3" %>
            </li>
            <li>
              <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary mx-3" %>
            </li>
            <li>
              <%= link_to "カート", cart_items_path, class: "btn btn-outline-secondary mx-3" %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-secondary mx-3" %>
            </li>
          <% elsif admin_signed_in? %>
            <li>
              <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-secondary mx-3" %>
            </li>
            <li>
              <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-secondary mx-3" %>
            </li>
            <li>
              <%= link_to "注文履歴一覧", admin_path, class: "btn btn-outline-secondary mx-3" %>
            </li>
            <li>
              <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-secondary mx-3" %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary mx-3" %>
            </li>
          <% else %>
            <li>
              <%= link_to "About", about_path, class: "btn btn-outline-secondary mx-3" %>
            </li>
            <li>
              <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary mx-3" %>
            </li>
            <li>
              <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-secondary mx-3" %>
            </li>
            <li>
              <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-secondary mx-3" %>
            </li>
          <% end %>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="mt-1 mx-3">
            <%= form_with url: items_path, method: :get, class: "d-flex" do |f| %>
              <%= f.text_field :keyword, placeholder: "Search", class: "form-control" %>
              <%= f.hidden_field :item_search, :value => "true" %>
              <%= f.submit "検索", class: "btn btn-outline-secondary" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
